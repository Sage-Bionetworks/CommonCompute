{
    "variables": {
        "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
        "aws_secret_key": "{{env `AWS_SECRET_KEY`}}"
    },

    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "us-east-1",
            "source_ami": "ami-682e1b02",
            "ssh_username": "centos",
            "ami_name": "CentOS 7.2 - SageCommonCompute {{timestamp}}",
            "instance_type": "c4.xlarge"
        }

    ],

    "provisioners": [
        {
            "type": "file",
            "source": "./modulefiles",
            "destination": "/home/centos"
        },
        {
            "type": "file",
            "source": "./numpy",
            "destination": "/home/centos"
        },
        {
            "type": "file",
            "source": "./yum",
            "destination": "/home/centos"
        },
        {
            "type": "file",
            "source": "./python_requirements.txt",
            "destination": "/home/centos"
        },
        {
            "type": "shell",
            "scripts": ["user_provisioner.sh"],
            "pause_before": "10s",
            "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
            "only": ["amazon-ebs"]
        },
        {
            "type": "shell",
            "scripts": ["software_provisioner.sh"],
            "pause_before": "10s",
            "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
            "only": ["amazon-ebs"]
        },
        {
            "type": "shell",
            "scripts": ["jenkins_provisioner.sh"],
            "pause_before": "10s",
            "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
            "only": ["amazon-ebs"]
        },
        {
            "type": "shell",
            "scripts": ["python_provisioner.sh"],
            "pause_before": "10s",
            "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
            "only": ["amazon-ebs"]
        },
        {
            "type": "shell",
            "scripts": ["r_provisioner.sh"],
            "pause_before": "10s",
            "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
            "only": ["amazon-ebs"]
        },
        {
            "type": "shell",
            "scripts": ["cloudbio_provisioner.sh"],
            "pause_before": "10s",
            "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
            "only": ["amazon-ebs"]
        }
    ]
}
