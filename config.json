{
    "variables": {
        "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
        "aws_secret_key": "{{env `AWS_SECRET_KEY`}}"
    },

    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "us-east-1",
            "source_ami": "ami-d05e75b8",
            "ssh_username": "ubuntu",
            "ami_name": "ubuntu14.04-SageCommonCompute {{timestamp}}",
            "instance_type": "m3.xlarge"
        }

    ],

    "provisioners": [
        {
            "type": "shell",
            "scripts": ["software_provisioner.sh"],
            "pause_before": "10s",
            "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
            "only": ["amazon-ebs"]
        },
        {
            "type": "file",
            "source": "./modulefiles/",
            "destination": "/usr/local/Modules/3.2.10/modulefiles"
        },
        {
            "type": "shell",
            "scripts": ["python_provisioner.sh"],
            "pause_before": "10s",
            "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
            "only": ["amazon-ebs"]
        },
        {
            "type": "shell",
            "scripts": ["r_provisioner.sh"],
            "pause_before": "10s",
            "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
            "only": ["amazon-ebs"]
        },
        {
            "type": "shell",
            "scripts": ["cloudbio_provisioner.sh"],
            "pause_before": "10s",
            "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
            "only": ["amazon-ebs"]
        }

    ]
}
